@using CSharpGames.Models

<div class="d-flex flex-column align-items-center" style="transform: scale(@Scale); transform-origin: top center;">
    <!-- Simple Robot SVG -->
    <svg width="100" height="120" viewBox="0 0 100 120">
        <!-- Antennas -->
        <line x1="30" y1="10" x2="20" y2="0" stroke="#333" stroke-width="2" />
        <line x1="70" y1="10" x2="80" y2="0" stroke="#333" stroke-width="2" />
        <circle cx="20" cy="0" r="3" fill="red" />
        
        <!-- Head -->
        <rect x="30" y="10" width="40" height="30" rx="5" fill="#ccc" stroke="#333" stroke-width="2" />
        <!-- Eyes -->
        <circle cx="40" cy="25" r="4" fill="#333" />
        <circle cx="60" cy="25" r="4" fill="#333" />

        <!-- Body (This changes color) -->
        <rect x="20" y="45" width="60" height="50" rx="5" fill="@DroidData.Color" stroke="#333" stroke-width="2" />
        
        <!-- Display Model on Chest -->
        <text x="50" y="75" font-family="monospace" font-size="10" fill="white" text-anchor="middle">@DroidData.Model</text>

        <!-- Arms -->
        <line x1="20" y1="55" x2="5" y2="70" stroke="#333" stroke-width="5" stroke-linecap="round" />
        <line x1="80" y1="55" x2="95" y2="70" stroke="#333" stroke-width="5" stroke-linecap="round" />
        
        <!-- Legs -->
        <rect x="30" y="95" width="15" height="20" fill="#666" />
        <rect x="55" y="95" width="15" height="20" fill="#666" />
    </svg>
    
    <div class="mt-2 text-center">
        <span class="badge bg-secondary">@DroidData.Name</span>
    </div>
</div>

@code {
    [Parameter]
    public required Droid DroidData { get; set; }

    [Parameter]
    public double Scale { get; set; } = 1.0;
}
